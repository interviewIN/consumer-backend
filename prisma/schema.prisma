generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InterviewStatus {
  WAITING
  IN_PROGRESS
  PENDING
  ACCEPTED
  REJECTED
}

enum Role {
  ADMIN
  COMPANY
  CANDIDATE
}

model User {
  id                  Int         @id @default(autoincrement())
  username            String      @unique
  email               String      @unique
  name                String
  password            String
  role                Role        @default(CANDIDATE)
  candidateInterviews Interview[] @relation("fk_candidate")
  Jobs                Job[]       @relation("fk_company")
}

model Job {
  id                 Int         @id @default(autoincrement())
  title              String
  description        String
  interviewQuestions String[]
  company            User        @relation("fk_company", fields: [companyId], references: [id])
  companyId          Int
  Interviews         Interview[]
  createdAt          DateTime    @default(now())

  @@index([companyId], name: "company_index")
}

model Interview {
  id          Int             @id @default(autoincrement())
  questions   String[]
  answers     String[]
  summary     Summary?
  status      InterviewStatus @default(WAITING)
  updatedAt   DateTime        @updatedAt
  candidate   User            @relation("fk_candidate", fields: [candidateId], references: [id])
  candidateId Int
  job         Job             @relation(fields: [jobId], references: [id])
  jobId       Int

  @@unique([candidateId, jobId])
  @@index([jobId], name: "job_index")
}

model Summary {
  id                      Int       @id @default(autoincrement())
  overallImpression       String
  chanceOfGettingTheJob   String
  mostRelevantPosition    String
  personalCapability      String
  psychologicalCapability String
  technicalCapability     String
  finalThoughts           String
  interview               Interview @relation(fields: [interviewId], references: [id])
  interviewId             Int       @unique
}