generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InterviewStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum Role {
  ADMIN
  COMPANY
  CANDIDATE
}

model User {
  id                  Int         @id @default(autoincrement())
  username            String      @unique
  password            String
  role                Role        @default(CANDIDATE)
  candidateInterviews Interview[] @relation("fk_candidate")
  CompanyInterviews   Interview[] @relation("fk_company")
}

model Interview {
  id          Int             @id @default(autoincrement())
  title       String
  chat        String[]
  status      InterviewStatus @default(PENDING)
  candidate   User            @relation("fk_candidate", fields: [candidateId], references: [id])
  candidateId Int
  company     User            @relation("fk_company", fields: [companyId], references: [id])
  companyId   Int
}
